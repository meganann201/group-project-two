<section class="container">

  <h5 class="card-title text-center">Create New Recipe</h5>

  <form class="new-recipe-form" method="post">
            {{!-- RECIPE NAME --}}
    <div class="form-group row">
      <label for="recipe-name" class="col-sm-2 col-form-label">Recipe Name</label>
      <div class="col-sm-10">
        <input class="form-control" type="text"  id="recipe-name" name="recipe-name" placeholder="My Special Plate" />
      </div>
    </div>
            {{!-- RECIPE DESCRIPTION --}}
    <div class="form-group row">
      <label for="recipe-description" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <textarea class="form-control" type="text" id="recipe-description" rows="5" name="recipe-description" placeholder="Some Tasty Details"></textarea>
      </div>
    </div>
            {{!-- RECIPE STEPS --}}
    <div class="form-group row">
      <label for="recipe-steps" class="col-sm-2 col-form-label">Steps</label>
      <div class="col-sm-10">
        <textarea type="text" id="recipe-steps" name="recipe-steps" class="form-control" ></textarea>
      </div>
    </div>
            {{!-- RECIPE INGREDIENTS --}}
   <div class="form-group row">
      <label for="recipe-ingredients" class="col-sm-2 col-form-label">Ingredients</label>
      <div class="col-sm-10">
        <textarea type="text" id="recipe-ingredients" name="recipe-ingredients" class="form-control"></textarea>
      </div>
    </div>
            {{!-- RECIPE COOK TIME --}}
    <div class="form-group row">
      <label for="recipe-cook-time" class="col-sm-2 col-form-label">Cook Time</label>
      <div class="col-sm-10">
        <input type="number" id="recipe-cook-time" name="recipe-cook-time" placeholder="35 (minutes)" class="form-control" />
      </div>
    </div>

            {{!-- RECIPE SERVINGS --}}

    <div class="form-group row">
      <label for="recipe-servings" class="col-sm-2 col-form-label">Serving Size</label>
      <div class="col-sm-10">
        <select class="custom-select custom-select-lg mb-3 form-control">
          <option value="1">Serves 1</option>
          <option value="2">Serves 2</option>
          <option value="3">Serves 3</option>
          <option value="4">Serves 4</option>
          <option value="5">Serves 5</option>
          <option value="6">Serves 6</option>
        </select>
      </div>
    </div>

            {{!-- RECIPE CATEGORIES --}}

    <div class="form-group row">

      <div class="col-sm-2 col-form-label">Categories
      </div>
            
      <div class="col-sm-4 col-form-label">
        <div class="col-sm-2">

          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
              Breakfast
            </label>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
              Lunch
            </label>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
              Dinner
            </label>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
              Appetizers
            </label>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
              Desserts
            </label>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
              Drinks
            </label>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
              Quick
            </label>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
              Vegetarian
            </label>
          </div>
        </div>
      </div>

              {{!-- SUBMIT RECIPE --}}
      <div class="col-sm-2 col-form-label">
        <button type="submit" class="btn btn-primary">Add Recipe</button>
      </div>
    </div>
  </form>

</section>


<section class="container">
  <h2 class="recipe-title">Your Recipes</h2>
  <ol>
    {{#each recipes as |recipe|}}
    <div class="container">
    <div class="row">
        <div class="col-6">
            <img class="img-fluid rounded mt-1 mb-1 shadow p-3 mb-1 bg-white rounded" src="{{recipe.image}}" alt="">
        </div>
        <div class="col-6 align-self-center shadow p-3 mb-5 bg-white rounded mt-5">
            <h2 class="recipe-title">{{recipe.recipe_name}}</h2>
            <p class="recipe-description">
                {{recipe.description}}
            </p>
            <div class="row border-bottom d-flex justify-content-center">
                <div class="col-4">
                    <p><i class="fa-solid fa-clock-rotate-left"></i> Total Time</p>
                    <p>{{recipe.time}} minutes</p>
                </div>
                <div class="col-4">
                    <p> <i class="fa-solid fa-users"></i> Yield</p>
                    <p>Serves {{recipe.servings}} </p>
                </div>
              <a href="/dashboard/edit{{recipe.id}}" class="btn-primary">Edit Recipe</a>
            </div>
        </div>
    </div>
</div>
    {{/each}}
  </ol>
</section>

